<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/azulForte">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTexto"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/botao1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="@color/azulFraco"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/botao2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="0"
            android:layout_column="4"
            android:backgroundTint="@color/azulFraco"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="@color/azulFraco"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="2"
            android:layout_column="4"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="@color/azulFraco"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="50sp" />

        <Button
            android:id="@+id/botao9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_row="4"
            android:layout_column="4"
            android:backgroundTint="@color/azulFraco"
            android:textSize="50sp" />
    </GridLayout>


    <TextView
        android:id="@+id/tvTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:text="@string/texto"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <Button
        android:id="@+id/botaoRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>